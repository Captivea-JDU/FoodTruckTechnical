<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="course_view_form">
            <field name="name">food.course.form</field>
            <field name="model">food.course</field>
            <field name="arch" type="xml">
                <form string="Course Form">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                            <field name="active"/>
                            </group>
                            <group>
                                <field name="level"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Dscription">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="course_view_list">
            <field name="name">food.course.list</field>
            <field name="model">food.course</field>
            <field name="arch" type="xml">
            <tree string="Course List">
                <field name="name"/>
                <field name="description"/>
                <field name="level"/>   
            </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="course_view_search">
            <field name="name">food.course.search</field>
            <field name="model">food.course</field>
            <field name="arch" type="xml"></field>
            <search>
                <field name="name"/>
                <field name="description"/>
            </search>
        </record>
    </data>
        </odoo>