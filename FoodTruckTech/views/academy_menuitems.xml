<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       <record model="ir.ui.view" id="food_list_view">
            <field name="name">food.list.view</field>
            <field name="model">food.course</field>
            <field name="arch" type="xml"/>

                <tree>
                    <field name="title" />
                    <field name="description" />
                    <field name="level" />

                </tree>
            </field>
        </record> 
      

           <record id="food_form_view" model="ir.ui.view">
            <field name="name">food.form.view</field>
            <field name="model">food.course</field>
            <field name="arch" type="xml"/>

                <form>
                    <field name="title" />
                    <field name="description" />
                    <field name="level" />

                </form>
           </record> 

           <record id="action_food_profile" model = "ir.action.act.window">
                <field name="name">Food Profile</field>
                 <field name="res_model">food.course</field>
                <field name="view_mode">tree, form</field>
           </record>


           <menuitem id="food_root_menu" name="food" />
           <menuitem id="food_sub_menu" parent="food_root_menu" />
           <menuitem id="food_profile_menu" action="action_food_profile" parent="school_sub_menu" />
    </data>
</odoo>

